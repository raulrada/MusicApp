<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.MusicApp" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.MusicApp.Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/activity_title_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/activity_title_margin_bottom</item>
        <item name="android:textSize">@dimen/activity_title_text_size</item>
        <item name="android:textColor">@color/colorActivityTitleText</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.MusicApp.SubTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/details_sub_title_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/details_sub_title_margin_bottom</item>
        <item name="android:textSize">@dimen/details_sub_title_text_size</item>
        <item name="android:textColor">@color/colorDetailsSubtitleText</item>
    </style>

    <style name="TextAppearance.MusicApp.Content">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/details_content_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/details_content_margin_bottom</item>
        <item name="android:textSize">@dimen/details_content_text_size</item>
        <item name="android:textColor">@color/colorDetailsContextText</item>
    </style>

    <style name="line">
        <item name="android:layout_marginTop">@dimen/line_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/line_margin_bottom</item>
        <item name="android:layout_height">@dimen/line_thickness</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorLine</item>
    </style>

    <style name="Widget.MusicApp.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/play_button_playlist_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/play_button_playlist_margin_top</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
