<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.MusicApp" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.MusicApp.Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/activity_title_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/activity_title_margin_bottom</item>
        <item name="android:textSize">@dimen/activity_title_text_size</item>
        <item name="android:textColor">@color/colorActivityTitleText</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
