<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/playlistBackground"
    android:orientation="vertical"
    tools:context="udacityscholarship.rada.raul.musicapp.DetailsActivity">

    <TextView
        style="@style/TextAppearance.MusicApp.Title"
        android:layout_marginEnd="@dimen/activity_title_margin_end"
        android:layout_marginLeft="@dimen/activity_title_margin_start"
        android:layout_marginRight="@dimen/activity_title_margin_end"
        android:layout_marginStart="@dimen/activity_title_margin_start"
        android:text="@string/song_details" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/no_height"
        android:layout_weight="2"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.MusicApp.SubTitle"
                    android:layout_marginEnd="@dimen/details_sub_title_margin_end"
                    android:layout_marginLeft="@dimen/details_sub_title_margin_start"
                    android:layout_marginRight="@dimen/details_sub_title_margin_end"
                    android:layout_marginStart="@dimen/details_sub_title_margin_start"
                    android:text="@string/track_number" />

                <TextView
                    android:id="@+id/song_position_text_view_details"
                    style="@style/TextAppearance.MusicApp.Content"
                    android:layout_marginEnd="@dimen/details_content_margin_end"
                    android:layout_marginLeft="@dimen/details_content_margin_start"
                    android:layout_marginRight="@dimen/details_content_margin_end"
                    android:layout_marginStart="@dimen/details_content_margin_start"
                    tools:text="1" />

                <View
                    style="@style/line"
                    android:layout_marginEnd="@dimen/line_margin_end"
                    android:layout_marginLeft="@dimen/line_margin_start"
                    android:layout_marginRight="@dimen/line_margin_end"
                    android:layout_marginStart="@dimen/line_margin_start" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.MusicApp.SubTitle"
                    android:layout_marginEnd="@dimen/details_sub_title_margin_end"
                    android:layout_marginLeft="@dimen/details_sub_title_margin_start"
                    android:layout_marginRight="@dimen/details_sub_title_margin_end"
                    android:layout_marginStart="@dimen/details_sub_title_margin_start"
                    android:text="@string/artist" />

                <TextView
                    android:id="@+id/artist_text_view_details"
                    style="@style/TextAppearance.MusicApp.Content"
                    android:layout_marginEnd="@dimen/details_content_margin_end"
                    android:layout_marginLeft="@dimen/details_content_margin_start"
                    android:layout_marginRight="@dimen/details_content_margin_end"
                    android:layout_marginStart="@dimen/details_content_margin_start"
                    tools:text="Wet Wet Wet" />

                <View
                    style="@style/line"
                    android:layout_marginEnd="@dimen/line_margin_end"
                    android:layout_marginLeft="@dimen/line_margin_start"
                    android:layout_marginRight="@dimen/line_margin_end"
                    android:layout_marginStart="@dimen/line_margin_start" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.MusicApp.SubTitle"
                    android:layout_marginEnd="@dimen/details_sub_title_margin_end"
                    android:layout_marginLeft="@dimen/details_sub_title_margin_start"
                    android:layout_marginRight="@dimen/details_sub_title_margin_end"
                    android:layout_marginStart="@dimen/details_sub_title_margin_start"
                    android:text="@string/title" />

                <TextView
                    android:id="@+id/title_text_view_details"
                    style="@style/TextAppearance.MusicApp.Content"
                    android:layout_marginEnd="@dimen/details_content_margin_end"
                    android:layout_marginLeft="@dimen/details_content_margin_start"
                    android:layout_marginRight="@dimen/details_content_margin_end"
                    android:layout_marginStart="@dimen/details_content_margin_start"
                    tools:text="Goodnight Girl" />

                <View
                    style="@style/line"
                    android:layout_marginEnd="@dimen/line_margin_end"
                    android:layout_marginLeft="@dimen/line_margin_start"
                    android:layout_marginRight="@dimen/line_margin_end"
                    android:layout_marginStart="@dimen/line_margin_start" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.MusicApp.SubTitle"
                    android:layout_marginEnd="@dimen/details_sub_title_margin_end"
                    android:layout_marginLeft="@dimen/details_sub_title_margin_start"
                    android:layout_marginRight="@dimen/details_sub_title_margin_end"
                    android:layout_marginStart="@dimen/details_sub_title_margin_start"
                    android:text="@string/genre" />

                <TextView
                    android:id="@+id/genre_text_view_details"
                    style="@style/TextAppearance.MusicApp.Content"
                    android:layout_marginEnd="@dimen/details_content_margin_end"
                    android:layout_marginLeft="@dimen/details_content_margin_start"
                    android:layout_marginRight="@dimen/details_content_margin_end"
                    android:layout_marginStart="@dimen/details_content_margin_start"
                    tools:text="House" />

                <View
                    style="@style/line"
                    android:layout_marginEnd="@dimen/line_margin_end"
                    android:layout_marginLeft="@dimen/line_margin_start"
                    android:layout_marginRight="@dimen/line_margin_end"
                    android:layout_marginStart="@dimen/line_margin_start" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.MusicApp.SubTitle"
                    android:layout_marginEnd="@dimen/details_sub_title_margin_end"
                    android:layout_marginLeft="@dimen/details_sub_title_margin_start"
                    android:layout_marginRight="@dimen/details_sub_title_margin_end"
                    android:layout_marginStart="@dimen/details_sub_title_margin_start"
                    android:text="@string/release_year" />

                <TextView
                    android:id="@+id/year_text_view_details"
                    style="@style/TextAppearance.MusicApp.Content"
                    android:layout_marginEnd="@dimen/details_content_margin_end"
                    android:layout_marginLeft="@dimen/details_content_margin_start"
                    android:layout_marginRight="@dimen/details_content_margin_end"
                    android:layout_marginStart="@dimen/details_content_margin_start"
                    tools:text="1900" />

                <View
                    style="@style/line"
                    android:layout_marginEnd="@dimen/line_margin_end"
                    android:layout_marginLeft="@dimen/line_margin_start"
                    android:layout_marginRight="@dimen/line_margin_end"
                    android:layout_marginStart="@dimen/line_margin_start" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/no_height"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/play_image_button"
            style="@style/Widget.MusicApp.ImageButton"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/play_button_playlist_margin_end"
            android:layout_marginLeft="@dimen/play_button_playlist_margin_start"
            android:layout_marginRight="@dimen/play_button_playlist_margin_end"
            android:layout_marginStart="@dimen/play_button_playlist_margin_start"
            android:contentDescription="@string/play"
            android:src="@drawable/play_vector" />

        <ImageButton
            android:id="@+id/rewind_image_button"
            style="@style/Widget.MusicApp.ImageButton"
            android:layout_marginEnd="@dimen/play_button_playlist_margin_end"
            android:layout_marginLeft="@dimen/play_button_playlist_margin_start"
            android:layout_marginRight="@dimen/play_button_playlist_margin_end"
            android:layout_marginStart="@dimen/play_button_playlist_margin_start"
            android:layout_toLeftOf="@id/play_image_button"
            android:contentDescription="@string/rewind"
            android:src="@drawable/rewind_vector" />

        <ImageButton
            android:id="@+id/back_first_image_button"
            style="@style/Widget.MusicApp.ImageButton"
            android:layout_marginEnd="@dimen/play_button_playlist_margin_end"
            android:layout_marginLeft="@dimen/play_button_playlist_margin_start"
            android:layout_marginRight="@dimen/play_button_playlist_margin_end"
            android:layout_marginStart="@dimen/play_button_playlist_margin_start"
            android:layout_toLeftOf="@id/rewind_image_button"
            android:contentDescription="@string/rewind"
            android:src="@drawable/back_first_vector" />

        <ImageButton
            android:id="@+id/forward_image_button"
            style="@style/Widget.MusicApp.ImageButton"
            android:layout_marginEnd="@dimen/play_button_playlist_margin_end"
            android:layout_marginLeft="@dimen/play_button_playlist_margin_start"
            android:layout_marginRight="@dimen/play_button_playlist_margin_end"
            android:layout_marginStart="@dimen/play_button_playlist_margin_start"
            android:layout_toRightOf="@id/play_image_button"
            android:contentDescription="@string/rewind"
            android:src="@drawable/forward_vector" />

        <ImageButton
            android:id="@+id/forward_last_image_button"
            style="@style/Widget.MusicApp.ImageButton"
            android:layout_marginEnd="@dimen/play_button_playlist_margin_end"
            android:layout_marginLeft="@dimen/play_button_playlist_margin_start"
            android:layout_marginRight="@dimen/play_button_playlist_margin_end"
            android:layout_marginStart="@dimen/play_button_playlist_margin_start"
            android:layout_toRightOf="@id/forward_image_button"
            android:contentDescription="@string/rewind"
            android:src="@drawable/forward_last_vector" />

        <ImageButton
            android:id="@+id/pause_image_button"
            style="@style/Widget.MusicApp.ImageButton"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/play_button_playlist_margin_end"
            android:layout_marginLeft="@dimen/play_button_playlist_margin_start"
            android:layout_marginRight="@dimen/play_button_playlist_margin_end"
            android:layout_marginStart="@dimen/play_button_playlist_margin_start"
            android:contentDescription="@string/rewind"
            android:src="@drawable/pause_vector"
            android:visibility="invisible" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/back_playlist_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/details_activity_button_margin_bottom"
            android:layout_marginTop="@dimen/details_activity_button_margin_top"
            android:background="@color/colorBackgroundButton"
            android:fontFamily="sans-serif-medium"
            android:text="@string/back_to_playlist"
            android:textAllCaps="false"
            android:textColor="@color/colorTextButton"
            android:textSize="@dimen/button_text_size" />

    </LinearLayout>

</LinearLayout>
